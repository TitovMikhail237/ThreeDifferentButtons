<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowIntent">

    <LinearLayout
        android:id="@+id/linearLayoutShowIntentInt"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewInt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Int"
            android:textSize="25sp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/textViewIntShow"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutShowIntentBoolean"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutShowIntentDouble"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutShowIntentDouble"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutShowIntentDouble">

        <TextView
            android:id="@+id/textViewBoolean"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Boolean"
            android:textSize="25sp"></TextView>

        <TextView
            android:id="@+id/textViewBooleanShow"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutShowIntentDouble"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutShowIntentInt"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutShowIntentInt"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutShowIntentInt">

        <TextView
            android:id="@+id/textViewDouble"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Double"
            android:textSize="25sp"></TextView>

        <TextView
            android:id="@+id/textViewDoubleShow"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="25sp">

        </TextView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>